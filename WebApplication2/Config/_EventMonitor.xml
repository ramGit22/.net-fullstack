			DECLARE @datelimit AS datetime2
			SET @datelimit = DATEADD(year, -2, GETDATE())

			SELECT DISTINCT top 100
				i.id, 
				s.name, 
				i.created, 
				i.updated, 
				i.statechanged, 
				i.valid_to
			FROM "identity" i
			JOIN state s 
